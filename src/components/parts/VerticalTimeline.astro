---
export interface Props {
  timelineEvents: TimelineEvent[];
}

const { timelineEvents } = Astro.props;
---

<ol class="relative border-l border-gray-400">
  {
    timelineEvents.map((timelineEvent) => (
      <li class="mb-10 ml-4">
        <div class="absolute w-3 h-3 bg-gray-400 rounded-full mt-1.5 -left-1.5 border border-white" />
        <time class="mb-1 text-sm font-normal leading-none text-gray-400">
          {timelineEvent.date}
        </time>
        <h3 class="text-lg font-semibold">{timelineEvent.title}</h3>
        <p class="mb-4 text-base font-normal text-gray-600">
          {timelineEvent.description}
        </p>
      </li>
    ))
  }
</ol>
